<UserControl x:Class="WpfApp.UserControlsAndWindows.Tools.CRUD_Tools_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.UserControlsAndWindows.Tools"
             mc:Ignorable="d" 
             Width="Auto" Height="Auto">
    <Grid Height="Auto" Width="Auto">
        <Button x:Name="btn_NuevaHerramienta" Content="Nueva Herramienta" HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Height="55" FontSize="22" Background="#FF00C851" BorderBrush="#FF00C851" Click="btn_NuevaHerramienta_Click" Margin="0,0,0,0"/>
        <Button x:Name="btn_AdministrarHerramientas" Content="Administrar Herramientas" HorizontalAlignment="Left" Margin="220,0,0,0" VerticalAlignment="Top" Width="660" Height="55" FontSize="20" Background="#FFFFBB33" BorderBrush="#FFFFBB33" Click="btn_AdministrarHerramientas_Click"/>
        <StackPanel HorizontalAlignment="Left" Margin="15,60,0,0" Width="Auto" x:Name="sp_UserControls" Height="Auto" VerticalAlignment="Top" />
    </Grid>
</UserControl>
